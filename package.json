{
  "name": "sistema-asistencias",
  "version": "1.0.0",
  "description": "Sistema de control de asistencias para profesores",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "setup": "npm run build && node dist/setup.js",
    "setup-db": "npm run build && node dist/setup-db.js",
    "vercel-build": "npm run build",
    "render-build": "npm run build && npm run setup-db"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^3.1.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}